<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/bg_list_information" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:background="@drawable/bg_sort_default" />

        <LinearLayout
            android:id="@+id/InfText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView"
            android:layout_alignTop="@id/imageView"
            android:layout_toRightOf="@id/imageView"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/InfoTittle"
                style="@style/info_list_tittle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/InfoContent"
                style="@style/info_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>